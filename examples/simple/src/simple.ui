pub show: Boolean;
pub text: String;
pub x: Length;
pub y: Length;
pub strings: [String];
pub toggle_show: Callback;

state: Int;

rect {
    x: 100px;
    y: 100px;
    width: 300px;
    height: 400px;
    background: #e44;

    span if (show) for str in (strings) {
        (str)
    }

    span {
        (text)
    }

    rect {
        background: #00f;
        x: (x);
        y: (y);
        width: 20px;
        height: 40px;
        events.pointer.click: (toggle_show);
    }

    rect if (show) {
        background: #609;
        x: 240px;
        y: 90px;
        width: 20px;
        height: 40px;
    }
}